---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" 
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">
        
  <!-- Homepage -->
  <url>
    <loc>{{ '/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Main pages -->
  <url>
    <loc>{{ '/reviews/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ '/blog/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc>{{ '/recommendations/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>
  
  <url>
    <loc>{{ '/about/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  
  <!-- Legal pages -->
  <url>
    <loc>{{ '/privacy/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
  </url>
  
  <url>
    <loc>{{ '/politica-cookies/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
  </url>
  
  <url>
    <loc>{{ '/affiliate/' | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.3</priority>
  </url>
  
  <!-- Blog posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ post.url | absolute_url }}</loc>
    <lastmod>{% if post.modified_date %}{{ post.modified_date | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {% if post.image %}
    <image:image>
      <image:loc>{{ post.image | absolute_url }}</image:loc>
      <image:title>{{ post.title | xml_escape }}</image:title>
    </image:image>
    {% endif %}
    {% if post.featured_image %}
    <image:image>
      <image:loc>{{ post.featured_image | absolute_url }}</image:loc>
      <image:title>{{ post.title | xml_escape }}</image:title>
    </image:image>
    {% endif %}
  </url>
  {% endfor %}
  
  <!-- Reviews -->
  {% for review in site.reviews %}
  <url>
    <loc>{{ review.url | absolute_url }}</loc>
    <lastmod>{% if review.modified_date %}{{ review.modified_date | date_to_xmlschema }}{% else %}{{ review.date | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {% if review.image %}
    <image:image>
      <image:loc>{{ review.image | absolute_url }}</image:loc>
      <image:title>{{ review.title | xml_escape }}</image:title>
    </image:image>
    {% endif %}
    {% if review.product_image %}
    <image:image>
      <image:loc>{{ review.product_image | absolute_url }}</image:loc>
      <image:title>{{ review.product_name | default: review.title | xml_escape }}</image:title>
    </image:image>
    {% endif %}
  </url>
  {% endfor %}
  
  <!-- Static pages -->
  {% for page in site.pages %}
    {% unless page.url contains '/404' or page.url contains '/search' or page.url contains '.xml' or page.url contains '.txt' %}
    <url>
      <loc>{{ page.url | absolute_url }}</loc>
      <lastmod>{% if page.modified_date %}{{ page.modified_date | date_to_xmlschema }}{% else %}{{ site.time | date_to_xmlschema }}{% endif %}</lastmod>
      <changefreq>{% if page.changefreq %}{{ page.changefreq }}{% else %}monthly{% endif %}</changefreq>
      <priority>{% if page.priority %}{{ page.priority }}{% else %}0.5{% endif %}</priority>
    </url>
    {% endunless %}
  {% endfor %}
  
</urlset>
